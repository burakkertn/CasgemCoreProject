@model List<PizzaPan.EntityLayer.Concrete.Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h2>Referanslar</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Referans İsmi </th>
        <th>Referans Açıklaması </th>
        <th>Referans Resmi </th>
        <th>Referans Fiyatı </th>
        <th>Referans Reesmi </th>

    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>@item.TestimonialID</td>
            <td>@item.CustomerName</td>
            <td>@item.CustomerTitle</td>
            <td>@item.Comment</td>
            <td>@item.ImageUrl</td>


            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>
<br />
<a href="/Testimonial/AddTestimonial" class="btn btn-primary">Yeni Kategori Ekle</a>
