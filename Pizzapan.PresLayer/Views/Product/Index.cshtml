@model List<PizzaPan.EntityLayer.Concrete.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Ürünler</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün İsmi </th>
        <th>Ürün Açıklaması </th>
        <th>Ürün Resmi </th>
        <th>Ürün Fiyatı </th>
        <th>Ürün İsmi </th>

    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>@item.CategoryID</td>
            <td>@item.Name</td>
            <td>@item.Des</td>
            <td>@item.ImageURL</td>
            <td>@item.Price</td>


            <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>
<br />
<a href="/Product/AddProduct" class="btn btn-primary">Yeni Kategori Ekle</a>
