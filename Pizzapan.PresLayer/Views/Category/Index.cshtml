@model List<PizzaPan.EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
   
}


<h2>Kategoriler</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori İsmi </th>
      
    </tr>
    @foreach (var item in Model)
    {
     
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.Name</td>


            <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>
<br />
<a href="/Category/AddCategory" class="btn btn-primary">Yeni Kategori Ekle</a>
