@model Discount
@{
    ViewData["Title"] = "CreateCode";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kuponlar</h2>

<form method="post"> 

    <label> İndirim Kodu </label>
    <input type="text" class="form-control" asp-for="DiscountCode" value="@ViewBag.v" readonly />
    <br />

    <label> İndirim Kodu Kullanım Sayısı </label>
    <input type="text" class="form-control" asp-for="DiscountDate" value="@ViewBag.DiscountDate" />
    <br />

    <label> İndirim Kodu Kullanım Sayısı </label>
    <input type="text" class="form-control" asp-for="DiscountSınır"  />
    <br />
    <button class="btn btn-outline-danger"> Ekle</button>
</form>





