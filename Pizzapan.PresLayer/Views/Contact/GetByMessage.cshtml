@model List<Contact>
@{
    ViewData["Title"] = "GetByMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h2>Teşekkür Mesajları</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Gönderen</th>
        <th>Konu </th>
        <th>Tarih </th>
        <th>Mesajı Sil  </th>
        <th>Mesajı Gör </th>

    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td>@item.Subject</td>

            <td>@item.Message</td>
            <td>@(((DateTime)item.SendDateMessage).ToString("dd-MM-yyyyy"))</td>

            <td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-danger">Sil</a></td>


        </tr>
    }
</table>
<br />
